# ============================================
# NIDO PLATFORM - ENVIRONMENT CONFIGURATION
# ============================================
# Copy this file to .env and update with your values
# NEVER commit .env to version control

# ============================================
# SERVER CONFIGURATION
# ============================================
NODE_ENV=development
PORT=5000
HOST=localhost

# ============================================
# DATABASE CONFIGURATION
# ============================================
# MongoDB Atlas (Recommended for production)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/nido-platform?retryWrites=true&w=majority

# Local MongoDB (Development)
# MONGODB_URI=mongodb://localhost:27017/nido-platform

# Database connection options
DB_MAX_POOL_SIZE=10
DB_SERVER_SELECTION_TIMEOUT_MS=5000
DB_SOCKET_TIMEOUT_MS=45000

# ============================================
# JWT CONFIGURATION
# ============================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_EXPIRE=7d
JWT_REFRESH_EXPIRE=30d

# ============================================
# COOKIE CONFIGURATION
# ============================================
COOKIE_SECRET=your-cookie-secret-key-change-this-in-production
COOKIE_SECURE=false
COOKIE_HTTP_ONLY=true
COOKIE_SAME_SITE=lax

# ============================================
# CLOUDINARY CONFIGURATION (Image Upload)
# ============================================
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret
CLOUDINARY_FOLDER=nido-platform

# ============================================
# EMAIL CONFIGURATION (SendGrid)
# ============================================
SENDGRID_API_KEY=your-sendgrid-api-key
FROM_EMAIL=noreply@yourdomain.com
FROM_NAME=Nido Platform

# ============================================
# STRIPE CONFIGURATION (Payments)
# ============================================
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# ============================================
# REDIS CONFIGURATION (Caching)
# ============================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# ============================================
# FILE UPLOAD CONFIGURATION
# ============================================
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,webp
UPLOAD_PATH=./uploads

# ============================================
# SECURITY CONFIGURATION
# ============================================
BCRYPT_SALT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
CORS_ORIGIN=http://localhost:3000

# ============================================
# LOGGING CONFIGURATION
# ============================================
LOG_LEVEL=info
LOG_FILE=./logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# ============================================
# EXTERNAL SERVICES
# ============================================
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# ============================================
# FEATURE FLAGS
# ============================================
ENABLE_EMAIL_VERIFICATION=true
ENABLE_PAYMENT_PROCESSING=true
ENABLE_GOOGLE_AUTH=true
ENABLE_FACEBOOK_AUTH=false
ENABLE_ANALYTICS=false

# ============================================
# DEVELOPMENT TOOLS
# ============================================
DEBUG_MODE=true
ENABLE_SWAGGER=true
SWAGGER_HOST=localhost:5000

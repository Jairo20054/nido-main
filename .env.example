# App
PORT=4000
NODE_ENV=development

# JWT
JWT_SECRET=changeme
JWT_EXPIRES_IN=7d

# Database (Postgres)
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/nido_media?schema=public

# Redis
REDIS_URL=redis://redis:6379

# S3 / MinIO
S3_ENDPOINT=http://minio:9000
S3_REGION=us-east-1
S3_BUCKET=nido-media
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_FORCE_PATH_STYLE=true
SIGNED_URL_EXPIRATION_SECONDS=86400

# Limits
MAX_IMAGE_SIZE_BYTES=10485760 # 10MB
MAX_VIDEO_SIZE_BYTES=524288000 # 500MB
MAX_VIDEO_DURATION_SECONDS=600 # 10 minutes

# ClamAV
CLAMAV_HOST=clamav
CLAMAV_PORT=3310

# Worker
WORKER_CONCURRENCY=2

# CDN
CDN_BASE_URL=
# Variables de entorno para Nido Backend

# Puerto y host
PORT=4000
HOST=0.0.0.0

# MongoDB
MONGO_URI=mongodb://localhost:27017/nido

# JWT
JWT_SECRET=tu_secreto_jwt_aqui
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# SMTP para envío de emails
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=usuario@example.com
SMTP_PASS=tu_contraseña_smtp

# URL del cliente frontend
CLIENT_URL=http://localhost:3000

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=5

# Cookie secret para cookie-parser
COOKIE_SECRET=tu_secreto_cookie

# Configuración adicional
REQUIRE_EMAIL_VERIFICATION=true

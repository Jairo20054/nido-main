.skeleton {.skeleton {

  background: linear-gradient(  background: linear-gradient(

    90deg,    90deg,

    var(--bg-light) 25%,    var(--bg-light) 25%,

    var(--border-color) 50%,    var(--border-color) 50%,

    var(--bg-light) 75%    var(--bg-light) 75%

  );  );

  background-size: 200% 100%;  background-size: 200% 100%;

